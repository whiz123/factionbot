{
  "name": "discord-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/bot/index.ts",
    "start": "node dist/bot/index.js",
    "clean": "rimraf dist logs",
    "prepare": "rimraf dist && npm run build",
    "register-commands": "tsx src/bot/commands/register.ts",
    "pm2:start": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop discord-bot",
    "pm2:restart": "pm2 restart discord-bot",
    "pm2:logs": "pm2 logs discord-bot",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete discord-bot"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "date-fns": "^3.3.1",
    "date-fns-tz": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "lru-cache": "^10.2.0",
    "pm2": "^5.3.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "undici": "^6.21.1",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "winston-transport": "^4.7.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10"
  }
}
